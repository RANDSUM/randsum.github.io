---
export interface Props {
  href: string
  class?: string
  target?: string
  rel?: string
}

const { href, class: className = '', target, rel } = Astro.props
---

<a
  href={href}
  class={`inline-flex items-center px-8 py-4 bg-transparent border-2 border-silver-400 hover:border-silver-200 text-silver-200 hover:text-silver-50 font-semibold rounded-lg transition-all duration-200 transform hover:scale-105 ${className}`}
  target={target}
  rel={rel}
>
  <slot />
</a>
