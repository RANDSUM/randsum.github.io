---
import Layout from '../../layouts/Layout.astro'
import { daggerheartAdditionalNavigation } from '../../config/navigation'
import HeroSection from '../../components/HeroSection.astro'
import { getPackageConfig } from '../../config/packages'

const packageConfig = getPackageConfig('daggerheart')
---

<Layout
  title="@RANDSUM/DAGGERHEART - Daggerheart RPG Dice Rolling"
  description="Specialized dice rolling utilities for Daggerheart RPG system with duality dice and hope/fear mechanics"
  additionalNavigationItems={daggerheartAdditionalNavigation}
>
  <HeroSection
    description="Specialized dice rolling utilities for Daggerheart RPG system with duality dice, hope/fear mechanics, and domain cards."
    class="overflow-hidden"
    packageName={packageConfig?.name}
    packageColor={packageConfig?.color}
    gameWebsiteUrl={packageConfig?.gameWebsiteUrl}
    githubUrl={packageConfig?.githubUrl}
    useGradientBackground={true}
    gradientFrom="from-randsum-950"
    gradientTo="to-games-daggerheart-700"
  />
</Layout>
