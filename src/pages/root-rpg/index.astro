---
import Layout from '../../layouts/Layout.astro'
import { rootRpgAdditionalNavigation } from '../../config/navigation'
import HeroSection from '../../components/HeroSection.astro'
import { getPackageConfig } from '../../config/packages'
import { extractLandingPageExample } from '../../utils/markdown'

const packageConfig = getPackageConfig('root-rpg')
const exampleCode = await extractLandingPageExample('root-rpg')
---

<Layout
  title="@RANDSUM/ROOT-RPG - Root RPG Dice Rolling"
  description="Specialized dice rolling utilities for Root: The Tabletop RPG with weapon skills and faction mechanics"
  additionalNavigationItems={rootRpgAdditionalNavigation}
>
  <!-- Hero Section -->
  <HeroSection
    description="Specialized dice rolling utilities for Root: The Tabletop RPG with weapon skills, faction mechanics, and woodland politics."
    class="overflow-hidden"
    packageName={packageConfig?.name}
    packageColor={packageConfig?.color}
    gameWebsiteUrl={packageConfig?.gameWebsiteUrl}
    githubUrl={packageConfig?.githubUrl}
    example={exampleCode}
    useGradientBackground={true}
    gradientFrom="from-randsum-950"
    gradientTo="to-games-root-rpg-700"
  />
</Layout>
