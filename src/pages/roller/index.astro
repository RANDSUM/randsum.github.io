---
import Layout from '../../layouts/Layout.astro'
import { rollerAdditionalNavigation } from '../../config/navigation'
import HeroSection from '../../components/HeroSection.astro'
---

<Layout
  title="@RANDSUM/ROLLER - Advanced Dice Rolling Engine"
  description="The core RANDSUM dice rolling engine with powerful notation support and advanced modifiers"
  additionalNavigationItems={rollerAdditionalNavigation}
>
  <HeroSection
    title="@RANDSUM/ROLLER"
    description="The core RANDSUM dice rolling engine. Advanced notation support, powerful modifiers, and lightning-fast performance for all your tabletop gaming needs."
    class="overflow-hidden"
    packageName="ROLLER"
    packageColor="text-randsum-500"
    docsUrl="/roller/docs"
    example={`import { roll, validateNotation } from '@RANDSUM/ROLLER'

// Basic dice rolling
const damage = roll('2d6+3')
console.log(\`Damage: \${damage.total}\`) // 5-15

// Advanced modifiers
const abilityScore = roll('4d6L') // Drop lowest
const advantage = roll('2d20H')   // Keep highest

// Validate notation before rolling
const isValid = validateNotation('4d6R{1}!')
if (isValid.valid) {
  const result = roll('4d6R{1}!') // Reroll 1s, exploding
  console.log(\`Result: \${result.total}\`)
}

// Custom dice faces
const direction = roll('1d{NSEW}')
console.log(\`Go: \${direction.total}\`)
`}
    githubUrl="https://github.com/RANDSUM/randsum/tree/main/packages/roller"
  />
</Layout>
