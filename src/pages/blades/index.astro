---
import Layout from '../../layouts/Layout.astro'
import { bladesAdditionalNavigation } from '../../config/navigation'
import HeroSection from '../../components/HeroSection.astro'
import { getPackageConfig } from '../../config/packages'
import { extractLandingPageExample } from '../../utils/markdown'

const packageConfig = getPackageConfig('blades')
const exampleCode = await extractLandingPageExample('blades')
---

<Layout
  title="@RANDSUM/BLADES - Blades in the Dark Dice Rolling"
  description="Specialized dice rolling utilities for Blades in the Dark RPG system"
  additionalNavigationItems={bladesAdditionalNavigation}
>
  <HeroSection
    description="Specialized dice rolling utilities for Blades in the Dark RPG system with stress, position, and effect mechanics."
    class="overflow-hidden"
    packageName={packageConfig?.name}
    packageColor={packageConfig?.color}
    gameWebsiteUrl={packageConfig?.gameWebsiteUrl}
    githubUrl={packageConfig?.githubUrl}
    example={exampleCode}
    useGradientBackground={true}
    gradientFrom="from-randsum-950"
    gradientTo="to-games-blades-700"
  />
</Layout>
