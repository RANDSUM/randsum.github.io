---
import Layout from '../../layouts/Layout.astro'
import { salvageunionAdditionalNavigation } from '../../config/navigation'
import HeroSection from '../../components/HeroSection.astro'
import { getPackageConfig } from '../../config/packages'

const packageConfig = getPackageConfig('salvageunion')
---

<Layout
  title="@RANDSUM/SALVAGEUNION - Salvage Union RPG Dice Rolling"
  description="Specialized dice rolling utilities for Salvage Union RPG with mech combat and salvage mechanics"
  additionalNavigationItems={salvageunionAdditionalNavigation}
>
  <!-- Hero Section -->
  <HeroSection
    description="Specialized dice rolling utilities for Salvage Union RPG with mech combat, salvage operations, and post-apocalyptic survival."
    class="overflow-hidden"
    packageName={packageConfig?.name}
    packageColor={packageConfig?.color}
    gameWebsiteUrl={packageConfig?.gameWebsiteUrl}
    githubUrl={packageConfig?.githubUrl}
    useGradientBackground={true}
    gradientFrom="from-randsum-950"
    gradientTo="to-games-salvageunion-700"
  />
</Layout>
